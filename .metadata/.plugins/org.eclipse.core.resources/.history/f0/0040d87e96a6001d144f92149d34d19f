package com.example.microservices.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.microservices.model.BookingModel;
import com.example.microservices.repository.BookingRepository;
import com.example.microservices.service.BookingService;

@Service
public class BookingServiceImpl implements BookingService {
	
	@Autowired
	private BookingRepository bookingRepository;

	@Override
	public List<BookingModel> findAll() {
		List<BookingModel> bookings = (List<BookingModel>) bookingRepository.findAll();
		return bookings;
	}

	@Override
	public BookingModel create(String name, String date, String price) {
		BookingModel booking = new BookingModel(name, date, price);
		return bookingRepository.save(booking);
	}

}
